{
  "compilerOptions": {
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "$this/*": ["./*"],
      "@/*": ["./src/*"]
    },
    "module": "es6",
    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
}
